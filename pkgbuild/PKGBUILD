pkgname=dispose
pkgver=r3.01a4cd6
pkgrel=1
pkgdesc="dispose folder"
arch=('any')
#depends=('perl')
source=("git+https://github.com/Vampire-Offical/dispose.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/dispose"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}



package() {
  mkdir -p ${pkgdir}/etc/system/systemd
  mkdir -p ${pkgdir}/bin
  cp ${srcdir}/dispose/dispose ${pkgdir}/bin/dispose
  cp ${srcdir}/dispose/dispose.service ${pkgdir}/etc/system/systemd
}
