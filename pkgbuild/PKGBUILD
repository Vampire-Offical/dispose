pkgname=dispose
pkgver=r5.1398ded
pkgrel=1
pkgdesc="dispose folder"
arch=('any')
#depends=('perl')
source=("git+https://github.com/Vampire-Offical/dispose.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/dispose"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}



package() {
  cd ${srcdir}/dispose
  mkdir -p ${pkgdir}/etc/system/systemd
  mkdir -p ${pkgdir}/usr/bin
  cp dispose ${pkgdir}/usr/bin/dispose
  cp dispose.bak ${pkgdir}/usr/bin/dispose.bak
  cp dispose.service ${pkgdir}/etc/system/systemd/
}
